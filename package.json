{
  "name": "lms-system",
  "version": "1.0.0",
  "description": "Learning Management System for University",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
