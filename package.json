    "build": "cd frontend && npm install && npm run build",
    "heroku-postbuild": "npm run build",
    "seed": "node backend/seed.js",
    "check-users": "node backend/check-users.js"
  },
  "keywords": [
    "lms",
    "education",
    "learning"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.6.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
