<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200">
  <!-- Diamond background -->
  <g transform="translate(100,100)">
    <polygon points="0,-90 90,0 0,90 -90,0" fill="#C8102E" stroke="#FFFFFF" stroke-width="8"/>
    
    <!-- Decorative corners -->
    <g stroke="#FFFFFF" stroke-width="6" fill="none">
      <!-- Top left -->
      <path d="M -65,-65 L -50,-80 M -65,-65 L -80,-50"/>
      <!-- Top right -->
      <path d="M 65,-65 L 50,-80 M 65,-65 L 80,-50"/>
      <!-- Bottom left -->
      <path d="M -65,65 L -50,80 M -65,65 L -80,50"/>
      <!-- Bottom right -->
      <path d="M 65,65 L 50,80 M 65,65 L 80,50"/>
    </g>
    
    <!-- Letter K stylized -->
    <g fill="#FFFFFF" stroke="#FFFFFF" stroke-width="2">
      <!-- Vertical bar of K -->
      <rect x="-30" y="-50" width="12" height="100" rx="2"/>
      
      <!-- Top diagonal of K -->
      <polygon points="-18,-30 0,-50 12,-50 20,-40 -10,-10 -18,-10"/>
      
      <!-- Bottom diagonal of K -->
      <polygon points="-18,10 -10,10 20,40 12,50 0,50 -18,30"/>
      
      <!-- Horizontal base element -->
      <rect x="-35" y="45" width="70" height="8" rx="2"/>
      
      <!-- Architectural detail lines -->
      <line x1="-45" y1="-45" x2="-25" y2="-25" stroke-width="4"/>
      <line x1="45" y1="-45" x2="25" y2="-25" stroke-width="4"/>
      <line x1="-45" y1="45" x2="-25" y2="25" stroke-width="4"/>
      <line x1="45" y1="45" x2="25" y2="25" stroke-width="4"/>
    </g>
  </g>
</svg>
